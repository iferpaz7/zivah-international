# Database
DATABASE_URL="postgresql://username:password@localhost:5432/zivah"

# NextAuth.js
# Email Configuration
EMAIL_FROM="noreply@zivahinternational.com"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google Analytics Configuration
# Replace with your actual Google Analytics 4 Measurement ID
# You can find this in your GA4 property settings
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Google Ads Conversion IDs (replace with actual IDs for conversion tracking)
GOOGLE_ADS_CONVERSION_ID_QUOTE=AW-XXXXXXXXX/XXXXXXXXXXX
GOOGLE_ADS_CONVERSION_ID_CONTACT=AW-XXXXXXXXX/YYYYYYYYYYY
GOOGLE_ADS_CONVERSION_ID_NEWSLETTER=AW-XXXXXXXXX/ZZZZZZZZZZZ
GOOGLE_ADS_CONVERSION_ID_DOWNLOAD=AW-XXXXXXXXX/WWWWWWWWWWW

# .env.example for Zivah International
# Add your database connection string here

# FTP Deployment Configuration
FTP_HOST="ftp.zivahinternational.com"
FTP_USER="zivahint"
FTP_PASSWORD="your-ftp-password-here"
FTP_PATH="/public_html/nextjs"
