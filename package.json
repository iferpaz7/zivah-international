{
  "name": "zivah-international-website",
  "version": "1.0.0",
  "description": "Sitio web corporativo para ZIVAH International S.A. - Exportadores premium de productos ecuatorianos",
  "main": "index.html",
  "scripts": {
    "dev": "http-server -p 8000 -o",
    "build": "echo 'Building static site...' && echo 'Ready for deployment'",
    "preview": "http-server dist -p 4173 -o",
    "lint:css": "stylelint 'css/**/*.css'",
    "lint:js": "eslint 'js/**/*.js'",
    "format": "prettier --write '**/*.{html,css,js,md}'",
    "optimize:images": "imagemin 'assets/images/**/*' --out-dir='assets/images/optimized'",
    "prepare:astro": "npm create astro@latest zivah-astro-migration",
    "prepare:nextjs": "npx create-next-app@latest zivah-nextjs-migration",
    "prepare:tailwind": "npm install -D tailwindcss postcss autoprefixer && npx tailwindcss init -p"
  },
  "keywords": [
    "zivah",
    "international",
    "ecuador",
    "export",
    "seafood",
    "fruits",
    "coffee",
    "shrimp",
    "aquaculture",
    "miami"
  ],
  "author": "ZIVAH International S.A.",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "stylelint": "^15.0.0",
    "imagemin": "^8.0.0",
    "imagemin-webp": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zivah-international/website.git"
  },
  "homepage": "https://zivahinternational.com",
  "engines": {
    "node": ">=16.0.0"
  }
}